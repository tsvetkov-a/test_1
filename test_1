CREATE TABLE PPO_DELAY
   (	ID BIGINT PRIMARY KEY,
	INSERTED DATE DEFAULT current_date NOT NULL,
	INSERTED_BY INTEGER NOT NULL,
	STATE INTEGER DEFAULT 0 NOT NULL,
	UPDATED DATE DEFAULT current_date,
	UPDATED_BY INTEGER,
	ORD_ID BIGINT NOT NULL,
	DELAY VARCHAR(2) NOT NULL,
	S_DATE DATE DEFAULT current_date NOT NULL,
	E_DATE DATE,
	REMARK VARCHAR(2000)
);

COMMENT ON COLUMN PPO_DELAY.ID IS 'Внутренний идентификатор';
COMMENT ON COLUMN PPO_DELAY.INSERTED IS 'Дата внесения записи';
COMMENT ON COLUMN PPO_DELAY.INSERTED_BY IS 'Код пользователя, внесшего запись';
COMMENT ON COLUMN PPO_DELAY.STATE IS 'Тип состояния записи';
COMMENT ON COLUMN PPO_DELAY.UPDATED IS 'Дата последнего изменения';
COMMENT ON COLUMN PPO_DELAY.UPDATED_BY IS 'Код пользователя, изменившего запись';
COMMENT ON COLUMN PPO_DELAY.ORD_ID IS 'Внутренний идентификатор';
COMMENT ON COLUMN PPO_DELAY.DELAY IS 'Причина приостановки';
COMMENT ON COLUMN PPO_DELAY.S_DATE IS 'Дата начала';
COMMENT ON COLUMN PPO_DELAY.E_DATE IS 'Дата окончания';
COMMENT ON COLUMN PPO_DELAY.REMARK IS 'Примечания';
COMMENT ON TABLE PPO_DELAY IS 'Причины приостановки оформления заказа';
