    /**
     * Обновляем заказчиков WWW_OATI_2
     */
    PROCEDURE updateoati2 AS
    BEGIN
        UPDATE archives.www_oati_2@web.mggt
        SET
            ( inn,
              short_name,
              ent_type,
              full_name,
              ogrn,
              okpo ) = (
                SELECT
                    inn,
                    short_name,
                    ent_type,
                    full_name,
                    ogrn,
                    okpo
                FROM
                    oati_prj_2
                WHERE
                    www_oati_2.id = oati_prj_2.id
            )
        WHERE
            EXISTS (
                SELECT
                    1
                FROM
                    oati_prj_2
                WHERE
                    www_oati_2.id = oati_prj_2.id
            );

    END;

