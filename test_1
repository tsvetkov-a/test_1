  function get_subj(m_name varchar2, m_date date, m_params xmltype := null) return varchar2 as
    sender varchar2(4000);
    rcp varchar2(4000);
    m_subj varchar2(4000);
    m_body clob;
    att xmltype;
    err clob;
  begin
    prepare_mail(m_name, m_date, m_params, sender, rcp, m_subj, m_body, att, err);
    return m_subj;
  end get_subj;
