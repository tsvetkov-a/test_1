                id,
                no
            FROM
                oati_isp_0;

    END updateisp0;

    /**
     * Вставляем заказы
     */
    PROCEDURE updateoati1 AS
    BEGIN
        INSERT INTO archives.www_oati_2@web.mggt (
            ord_id,
            plan_list,
            ops_date,
            address,
            short_name,
            inn,
            ent_type,
            full_name,
            ogrn,
            okpo
        )
            SELECT
                id,
                ops_no,
                ops_date,
                address,
                short_name,
                inn,
                ent_type,
                full_name,
                ogrn,
                okpo
            FROM
                oati_prj_1;

    END;

