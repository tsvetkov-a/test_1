CREATE TABLE PPO_DELAY
   (	"ID" NUMBER(20,0) NOT NULL ENABLE, 
	"INSERTED" DATE DEFAULT sysdate NOT NULL ENABLE, 
	"INSERTED_BY" NUMBER(10,0) NOT NULL ENABLE, 
	"STATE" NUMBER(1,0) DEFAULT 0 NOT NULL ENABLE, 
	"UPDATED" DATE DEFAULT sysdate, 
	"UPDATED_BY" NUMBER(10,0), 
	"ORD_ID" NUMBER(20,0) NOT NULL ENABLE, 
	"DELAY" VARCHAR2(2 BYTE) NOT NULL ENABLE, 
	"S_DATE" DATE DEFAULT sysdate NOT NULL ENABLE, 
	"E_DATE" DATE, 
	"REMARK" VARCHAR2(2000 BYTE));

	COMMENT ON COLUMN "PPO"."PPO_DELAY"."ID" IS 'Внутренний идентификатор';
   COMMENT ON COLUMN "PPO"."PPO_DELAY"."INSERTED" IS 'Дата внесения записи';
   COMMENT ON COLUMN "PPO"."PPO_DELAY"."INSERTED_BY" IS 'Код пользователя, внесшего запись';
   COMMENT ON COLUMN "PPO"."PPO_DELAY"."STATE" IS 'Тип состояния записи';
   COMMENT ON COLUMN "PPO"."PPO_DELAY"."UPDATED" IS 'Дата последнего изменения';
   COMMENT ON COLUMN "PPO"."PPO_DELAY"."UPDATED_BY" IS 'Код пользователя, изменившего запись';
   COMMENT ON COLUMN "PPO"."PPO_DELAY"."ORD_ID" IS 'Внутренний идентификатор';
   COMMENT ON COLUMN "PPO"."PPO_DELAY"."DELAY" IS 'Причина приостановки';
   COMMENT ON COLUMN "PPO"."PPO_DELAY"."S_DATE" IS 'Дата начала';
   COMMENT ON COLUMN "PPO"."PPO_DELAY"."E_DATE" IS 'Дата окончания';
   COMMENT ON COLUMN "PPO"."PPO_DELAY"."REMARK" IS 'Примечания';
   COMMENT ON TABLE "PPO"."PPO_DELAY"  IS 'Причины приостановки оформления заказа';
COMMIT;
